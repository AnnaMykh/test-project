    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="229*"/>
            <RowDefinition Height="286*"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/test23x.png" Stretch="UniformToFill"/>
        </Grid.Background>
       
        <!--<Frame x:Name="mainFrame" Margin="965,-23,-965,24"/>-->
        <Frame x:Name="mainframe" Content=" " HorizontalAlignment="Left" Height="459" VerticalAlignment="Top" Width="938" Margin="0,-4,0,0" NavigationUIVisibility="Visible" Grid.RowSpan="2"/>
