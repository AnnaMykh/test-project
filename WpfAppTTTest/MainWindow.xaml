        <Button x:Name="BtnPage3" Content="4 клас" HorizontalAlignment="Left" Height="60" Margin="548,226,0,0" VerticalAlignment="Top" Width="145" Click="BtnPage3_Click" FontSize="36" FontFamily="Corbel Light" Background="White" BorderBrush="{x:Null}" Grid.Row="1"/>
        <Button x:Name="BtnPage4" Content="Вихід" HorizontalAlignment="Left" Height="50" Margin="784,226,0,0" VerticalAlignment="Top" Width="144" Click="BtnPage4_Click" FontSize="36" FontFamily="Corbel Light" Background="{x:Null}" BorderBrush="{x:Null}" Grid.Row="1"/>

    </Grid>
